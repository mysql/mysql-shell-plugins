{
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2022",
        "outDir": "out",
        "noEmit": true,
        "removeComments": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "inlineSources": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noImplicitOverride": true
    },
    "compileOnSave": true,
    "include": [
        "src/*.ts",
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "test-resources",
        "tests",
        "packaging"
    ]
}
