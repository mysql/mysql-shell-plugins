{
    "jest.coverageFormatter": "GutterFormatter",
    "jest.jestCommandLine": "npm run unit-tests --",
    "jest.runMode": "deferred",
    "jest.monitorLongRun": "off",
    "files.exclude": {
        ".rollup.cache/**": true,
        "build": true,
        "coverage": true,
        "src/wrapper/**": true
    },
    "testExplorer.hideWhen": "noAdapters",
    "files.watcherExclude": {
        ".vscode-test": true
    },
    "npm.exclude": [
        "**/test-resources/**",
        "**/shell/**",
        "**/e2e/vscode**"
    ],
}
