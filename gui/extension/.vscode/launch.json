{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Extension",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "trace": false,
            "smartStep": true,
            "preLaunchTask": "Build Extension"
        },
        {
            /* This launcher is meant to be used together with FE */
            /* - run-vite:dev-server */
            /* - run-shell:single-user */
            /* To enable running the extension using live updates on FE */
            /* Remember to reload the extension to have FE changes take effect */
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Extension (No Shell)",
            "runtimeExecutable": "${execPath}",
            "env": {
                "MYSQLSHEXT_OVERRIDE_URL":"http://localhost:3001/?token=1234&amp;app=vscode"
            },
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "trace": false,
            "smartStep": true,
            "preLaunchTask": "Build Extension",
        },
        {
            "name": "Debug UI Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/extest",
            "args": [
                "run-tests",
                "-s",
                "tests/e2e/test-resources",
                "-e",
                "tests/e2e/test-resources/test-extension",
                "-t",
                "stable",
                "-f",
                "${workspaceFolder}/tests/e2e/output/tests/*.js",
            ],
            "preLaunchTask": "tsc: e2e",
            "console": "integratedTerminal",
            "env": {
                "MSG_TESTING": "E2E"
            }
        },
        {
            "name": "Run Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/out/extension/src/test/suite/index"
            ],
            "outFiles": [
                "${workspaceFolder}/out/extension/src/test/**/*.js"
            ],
            "env": {
                "NODE_ENV": "test"
            }
        }
    ]
}
