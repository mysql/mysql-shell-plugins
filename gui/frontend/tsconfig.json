{
    "compilerOptions": {
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "target": "es2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "allowJs": false,
        "outDir": "build",
        "removeComments": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noImplicitAny": true,
        "sourceRoot": "src",
        "strictNullChecks": true,
        "noImplicitOverride": true,
        "lib": [
            "es2022",
            "dom",
            "WebWorker"
        ],
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": false,
        "strictPropertyInitialization": true,
        "noFallthroughCasesInSwitch": false,
        "paths": {
            "react": [
                "./node_modules/preact/compat/"
            ],
            "react-dom": [
                "./node_modules/preact/compat/"
            ]
        },
    },
    "include": [
        "scripts/**/*.ts",
        "src/**/*",
        "src/**/*.json",
        "src/oci-typings/**/*.ts",
        "postcss.config.cjs",
        // Needed here during build setup in vite.config.js.
        "package.json",
        "vite-env.d.ts"
    ],
    "exclude": [
        "build",
        "node_modules",
        "src/tests",
    ],
    "ts-node": {
        "esm": true
    },
}
