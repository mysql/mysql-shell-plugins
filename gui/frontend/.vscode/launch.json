{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch MSG on FF",
            "url": "https://localhost:3001",
            "webRoot": "${workspaceFolder}/src",
            "clearConsoleOnReload": true,
            "preLaunchTask": "tsc: watch",
            "keepProfileChanges": false,
            "reAttach": true,
            "profile": "dev",
            "enableCRAWorkaround": true,
            "firefoxArgs": [
                //"-devtools",
            ]
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch MSG on FF - single user",
            "url": "http://localhost:3001?token=1234",
            "webRoot": "${workspaceFolder}/src",
            "clearConsoleOnReload": true,
            "preLaunchTask": "tsc: watch",
            "keepProfileChanges": false,
            "reAttach": true,
            "profile": "dev",
            "enableCRAWorkaround": true,
            "skipFiles": [
                "**/node_modules/**"
            ],
            "firefoxArgs": [
                //"-devtools",
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch MSG on Chrome",
            "url": "https://localhost:3001",
            "webRoot": "${workspaceFolder}/src",
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "sourceMaps": true,
            "preLaunchTask": "tsc: watch",
            "sourceMapPathOverrides": {},
            "runtimeArgs": [
                "--allow-insecure-localhost"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch MSG on Chrome - Single user",
            "url": "http://127.0.0.1:3001?token=1234",
            "webRoot": "${workspaceFolder}", // Point to folder with vite.config.ts.
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "preLaunchTask": "tsc: watch",
            "sourceMaps": true,
            "runtimeArgs": [
                "--allow-insecure-localhost"
            ],
            "showAsyncStacks": false,
            "smartStep": false,
            "perScriptSourcemaps": "yes",
            "skipFiles": [
                //"${workspaceFolder}/node_modules/**", doesn't make startup faster, but prevents debugging 3rd party code.
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run selected Jest test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "unit-tests:debug"
            ],
            "args": [
                "--",
                "-i",
                "${file}",
                "-t",
                "--no-coverage",
            ],
            "console": "integratedTerminal",
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to running Browser",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {},
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch OCI typings processing",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--no-warnings=ExperimentalWarning",
                "--loader",
                "ts-node/esm",
                "scripts/copy-oci-typings.ts",
            ],
            "sourceMaps": true,
            "outputCapture": "std"
        }
    ]
}
